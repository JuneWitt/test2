<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@color/defaultcolor"
    tools:context=".In_Navigation_Menu.Bmi_item2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@drawable/shadowwithwhite"
        android:gravity="center_horizontal"
        android:elevation="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="15dp">

        <com.sevenheaven.segmentcontrol.SegmentControl
            android:id="@+id/segment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"

            app:texts="ชาย|หญิง"
            app:cornerRadius="5dp"/>
        </LinearLayout>

        <fragment
            android:id="@+id/placefragment"
            android:name="com.wittayapun.june.test2.In_Navigation_Menu.Bodyfat.male_lbm_Fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>